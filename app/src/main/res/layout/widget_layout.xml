<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <!-- Idle container -->
    <FrameLayout
        android:id="@+id/idle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/widget_play_pause_idle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_control_circle"
            android:contentDescription="@string/widget_play_pause"
            android:src="@drawable/ic_play_arrow_24"
            android:padding="8dp"
            android:scaleType="centerInside" />
    </FrameLayout>

    <!-- Full container -->
    <LinearLayout
        android:id="@+id/full_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/widget_album_art_desc"
            android:src="@drawable/ic_music_note_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/title"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/app_font_family"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Song Title Here" />

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="@string/artist"
                android:textColor="#cccccc"
                android:textSize="14sp"
                android:fontFamily="@font/app_font_family"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Artist Name Here" />

            <TextView
                android:id="@+id/widget_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_00_00_00_00"
                android:textColor="#cccccc"
                android:textSize="13sp"
                android:fontFamily="@font/app_font_family"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="00:00 / 00:00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/widget_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:padding="4dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_prev"
                android:src="@drawable/ic_skip_previous_24"
                android:tint="@android:color/white"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/widget_play_pause_full"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="4dp"
                android:padding="4dp"
                android:background="@drawable/widget_control_circle"
                android:contentDescription="@string/widget_play_pause"
                android:src="@drawable/ic_play_arrow_24"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:padding="4dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_next"
                android:src="@drawable/ic_skip_next_24"
                android:tint="@android:color/white"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/widget_repeat"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/widget_repeat_desc"
                android:src="@drawable/repeat"
                android:tint="@android:color/white"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>