<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.engfred.musicplayer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- existing permissions (keep yours as well) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <!-- Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- Legacy read (API <= 32) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <application
        android:name=".MusicPlayerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting">

        <!-- MainActivity: Add ACTION_VIEW intent-filter so file managers offer your app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.App.Starting">
            <!-- Launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Accept VIEW for audio files only (removed video support) -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Specific audio MIME types -->
                <data android:scheme="content" android:mimeType="audio/*" />
                <data android:scheme="file" android:mimeType="audio/*" />
                <data android:scheme="content" android:mimeType="application/ogg" />
                <data android:scheme="file" android:mimeType="application/ogg" />
                <data android:scheme="content" android:mimeType="application/x-flac" />
                <data android:scheme="file" android:mimeType="application/x-flac" />
            </intent-filter>

            <!-- Additional intent filter for opening audio files from file managers -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <!-- Support common audio file extensions -->
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.mp3" />
                <data android:pathPattern=".*\\.MP3" />
                <data android:pathPattern=".*\\.wav" />
                <data android:pathPattern=".*\\.WAV" />
                <data android:pathPattern=".*\\.ogg" />
                <data android:pathPattern=".*\\.OGG" />
                <data android:pathPattern=".*\\.flac" />
                <data android:pathPattern=".*\\.FLAC" />
                <data android:pathPattern=".*\\.m4a" />
                <data android:pathPattern=".*\\.M4A" />
                <data android:pathPattern=".*\\.aac" />
                <data android:pathPattern=".*\\.AAC" />
                <data android:pathPattern=".*\\.wma" />
                <data android:pathPattern=".*\\.WMA" />
                <data android:pathPattern=".*\\.amr" />
                <data android:pathPattern=".*\\.AMR" />
            </intent-filter>
        </activity>

        <!-- Playback service -->
        <service
            android:name="com.engfred.musicplayer.feature_player.data.service.PlaybackService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>

        <!-- Widget receiver -->
        <receiver
            android:name=".widget.PlayerWidgetProvider"
            android:exported="true"
            android:label="Music Player Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/player_widget_info" />
        </receiver>

    </application>
</manifest>